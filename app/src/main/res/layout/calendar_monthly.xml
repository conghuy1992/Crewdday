<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/view1_month"
        layout="@layout/layout_spinner_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/th_margin_top" />


    <ListView
        android:id="@+id/lv_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="@dimen/th_margin_top"
        android:divider="@null">

    </ListView>

    <include
        android:id="@+id/time_month"
        layout="@layout/layout_start_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/th_margin_top" />

    <include
        android:id="@+id/view2_month"
        layout="@layout/layout_spinner_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/th_margin_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
</LinearLayout>
